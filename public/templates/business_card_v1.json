{
  "id": "business_card_v1",
  "name": "Professional Business Card",
  "description": "Clean and professional business card template with logo placement and contact information",
  "version": "1.0.0",
  "category": "business",
  "canvas": {
    "width": 350,
    "height": 200,
    "backgroundColor": "#ffffff"
  },
  "inputs": {
    "full_name": {
      "type": "text",
      "required": true,
      "default": "John Smith",
      "description": "Full name of the person"
    },
    "job_title": {
      "type": "text",
      "required": true,
      "default": "Senior Developer",
      "description": "Job title or position"
    },
    "company_name": {
      "type": "text",
      "required": true,
      "default": "Tech Solutions Inc.",
      "description": "Company or organization name"
    },
    "email": {
      "type": "text",
      "required": true,
      "default": "john.smith@company.com",
      "description": "Email address"
    },
    "phone": {
      "type": "text",
      "required": true,
      "default": "+1 (555) 123-4567",
      "description": "Phone number"
    },
    "website": {
      "type": "text",
      "required": false,
      "default": "www.company.com",
      "description": "Website URL"
    },
    "company_logo": {
      "type": "asset",
      "required": false,
      "description": "Company logo image"
    },
    "primary_color": {
      "type": "color",
      "required": false,
      "default": "#2563eb",
      "description": "Primary brand color"
    },
    "secondary_color": {
      "type": "color",
      "required": false,
      "default": "#64748b",
      "description": "Secondary text color"
    }
  },
  "layers": [
    {
      "id": "card_background",
      "type": "shape",
      "content": {
        "type": "rectangle",
        "fill": "#ffffff",
        "stroke": "#e2e8f0",
        "strokeWidth": 1
      },
      "transform": {
        "position": { "x": "0%", "y": "0%" },
        "size": { "width": "100%", "height": "100%" },
        "anchor": "top-left"
      },
      "visible": true
    },
    {
      "id": "accent_stripe",
      "type": "shape",
      "content": {
        "type": "rectangle",
        "fill": "$input.primary_color",
        "stroke": "none"
      },
      "transform": {
        "position": { "x": "0%", "y": "0%" },
        "size": { "width": "100%", "height": "8%" },
        "anchor": "top-left"
      },
      "visible": true
    },
    {
      "id": "company_logo",
      "type": "image",
      "content": {
        "source": "$input.company_logo",
        "fit": "contain"
      },
      "transform": {
        "position": { "x": "8%", "y": "20%" },
        "size": { "width": "25%", "height": "35%" },
        "anchor": "top-left"
      },
      "visible": true,
      "conditions": [
        {
          "type": "hasValue",
          "reference": "$input.company_logo"
        }
      ]
    },
    {
      "id": "full_name",
      "type": "text",
      "content": {
        "text": "$input.full_name",
        "font": {
          "family": "sans-serif",
          "size": 22,
          "weight": "bold",
          "style": "normal"
        },
        "color": "$input.primary_color",
        "align": "left"
      },
      "transform": {
        "position": { "x": "40%", "y": "18%" },
        "size": { "width": "55%", "height": "15%" },
        "anchor": "top-left"
      },
      "visible": true
    },
    {
      "id": "job_title",
      "type": "text",
      "content": {
        "text": "$input.job_title",
        "font": {
          "family": "sans-serif",
          "size": 16,
          "weight": "normal",
          "style": "normal"
        },
        "color": "$input.secondary_color",
        "align": "left"
      },
      "transform": {
        "position": { "x": "40%", "y": "32%" },
        "size": { "width": "55%", "height": "12%" },
        "anchor": "top-left"
      },
      "visible": true
    },
    {
      "id": "company_name",
      "type": "text",
      "content": {
        "text": "$input.company_name",
        "font": {
          "family": "sans-serif",
          "size": 14,
          "weight": "normal",
          "style": "italic"
        },
        "color": "$input.secondary_color",
        "align": "left"
      },
      "transform": {
        "position": { "x": "40%", "y": "43%" },
        "size": { "width": "55%", "height": "10%" },
        "anchor": "top-left"
      },
      "visible": true
    },
    {
      "id": "contact_separator",
      "type": "shape",
      "content": {
        "type": "line",
        "stroke": "#e2e8f0",
        "strokeWidth": 1,
        "points": [[0, 0], [280, 0]]
      },
      "transform": {
        "position": { "x": "8%", "y": "60%" },
        "size": { "width": "84%", "height": "1px" },
        "anchor": "top-left"
      },
      "visible": true
    },
    {
      "id": "email_label",
      "type": "text",
      "content": {
        "text": "Email:",
        "font": {
          "family": "sans-serif",
          "size": 11,
          "weight": "bold",
          "style": "normal"
        },
        "color": "$input.primary_color",
        "align": "left"
      },
      "transform": {
        "position": { "x": "8%", "y": "68%" },
        "size": { "width": "15%", "height": "8%" },
        "anchor": "top-left"
      },
      "visible": true
    },
    {
      "id": "email_value",
      "type": "text",
      "content": {
        "text": "$input.email",
        "font": {
          "family": "sans-serif",
          "size": 11,
          "weight": "normal",
          "style": "normal"
        },
        "color": "$input.secondary_color",
        "align": "left"
      },
      "transform": {
        "position": { "x": "25%", "y": "68%" },
        "size": { "width": "70%", "height": "8%" },
        "anchor": "top-left"
      },
      "visible": true
    },
    {
      "id": "phone_label",
      "type": "text",
      "content": {
        "text": "Phone:",
        "font": {
          "family": "sans-serif",
          "size": 11,
          "weight": "bold",
          "style": "normal"
        },
        "color": "$input.primary_color",
        "align": "left"
      },
      "transform": {
        "position": { "x": "8%", "y": "78%" },
        "size": { "width": "15%", "height": "8%" },
        "anchor": "top-left"
      },
      "visible": true
    },
    {
      "id": "phone_value",
      "type": "text",
      "content": {
        "text": "$input.phone",
        "font": {
          "family": "sans-serif",
          "size": 11,
          "weight": "normal",
          "style": "normal"
        },
        "color": "$input.secondary_color",
        "align": "left"
      },
      "transform": {
        "position": { "x": "25%", "y": "78%" },
        "size": { "width": "35%", "height": "8%" },
        "anchor": "top-left"
      },
      "visible": true
    },
    {
      "id": "website_label",
      "type": "text",
      "content": {
        "text": "Web:",
        "font": {
          "family": "sans-serif",
          "size": 11,
          "weight": "bold",
          "style": "normal"
        },
        "color": "$input.primary_color",
        "align": "left"
      },
      "transform": {
        "position": { "x": "8%", "y": "88%" },
        "size": { "width": "15%", "height": "8%" },
        "anchor": "top-left"
      },
      "visible": true,
      "conditions": [
        {
          "type": "hasValue",
          "reference": "$input.website"
        }
      ]
    },
    {
      "id": "website_value",
      "type": "text",
      "content": {
        "text": "$input.website",
        "font": {
          "family": "sans-serif",
          "size": 11,
          "weight": "normal",
          "style": "normal"
        },
        "color": "$input.secondary_color",
        "align": "left"
      },
      "transform": {
        "position": { "x": "25%", "y": "88%" },
        "size": { "width": "70%", "height": "8%" },
        "anchor": "top-left"
      },
      "visible": true,
      "conditions": [
        {
          "type": "hasValue",
          "reference": "$input.website"
        }
      ]
    },
    {
      "id": "corner_accent",
      "type": "shape",
      "content": {
        "type": "circle",
        "fill": "$input.primary_color",
        "stroke": "none"
      },
      "transform": {
        "position": { "x": "90%", "y": "75%" },
        "size": { "width": "15px", "height": "15px" },
        "anchor": "center"
      },
      "visible": true
    }
  ],
  "outputs": {
    "business_card": {
      "type": "image",
      "format": "png",
      "quality": 100
    }
  }
}